# Application
DEBUG=false

# Database
DATABASE_URL=sqlite+aiosqlite:///./meeting_brief.db

# LLM Provider: openai, anthropic, ollama, llamacpp
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (for local LLMs)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# LlamaCpp Configuration (for local GGUF models)
# LLAMACPP_MODEL_PATH=/path/to/model.gguf
# LLAMACPP_N_CTX=4096

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=meeting_context

# Calendar Integration (Google)
# GOOGLE_CREDENTIALS_PATH=./credentials/google.json

# Calendar Integration (Outlook)
# OUTLOOK_CLIENT_ID=your-client-id
# OUTLOOK_CLIENT_SECRET=your-client-secret

# Email Integration (IMAP)
# IMAP_HOST=imap.gmail.com
# IMAP_PORT=993
# IMAP_USERNAME=your-email@gmail.com
# IMAP_PASSWORD=your-app-password

# CRM Integration
# CRM_PROVIDER=hubspot
# CRM_API_KEY=your-hubspot-api-key
